## Environment variables for JobLinca

# Supabase public credentials used in client side
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase service role key (keep secret!) used in server side operations
SUPABASE_SERVICE_ROLE_KEY=

# JWT secret for signing cookies (optional if using Supabase cookies)
JWT_SECRET=

# WhatsApp Cloud API credentials
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# SMS provider API credentials (configure one of the providers)
SMS_PROVIDER_URL=
SMS_PROVIDER_API_KEY=

# Payment aggregator credentials
PAYMENT_AGGREGATOR_URL=
PAYMENT_AGGREGATOR_KEY=

# MTN MoMo / Orange Money credentials (phase 2)
MTN_MOMO_API_KEY=
ORANGE_MONEY_API_KEY=

# OpenAI API key for AI microservices
OPENAI_API_KEY=

# Site configuration
SITE_URL=http://localhost:3000
LANG_DEFAULT=en